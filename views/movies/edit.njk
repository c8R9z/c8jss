{% extends "partials/layout.njk" %}
{% block title %}Edit movie{% endblock %}
{% block content %}
  <div class="container">
    <form action="/movies/edit/{{ movie.id }}" method="POST">
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="Movie name" name="movie" value="{{ movie.name }}">
      </div>
      <div class="mb-3">
        <input type="number" class="form-control" placeholder="Movie year" name="year" value="{{ movie.year }}">
      </div>
      <div class="mb-3">
        <textarea class="form-control" name="description" placeholder="Movie description">{{ movie.description }}</textarea>
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
  </div>
{% endblock %}