{% extends "partials/layout.njk" %}
{% block title %}{{ movie.name }}{% endblock %}
{% block content %}
    <div class="container">
        <table class="table">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ movie.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ movie.name }}</td>
                </tr>
                <tr>
                    <th>Year</th>
                    <td>{{ movie.year }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ movie.description }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}